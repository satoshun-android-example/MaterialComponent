<resources>

  <style name="AppTheme" parent="Theme.MaterialComponents.Light">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="Widget.MaterialComponents.Chip.Error" parent="Base.Widget.MaterialComponents.Chip">
    <item name="closeIconVisible">true</item>

    <item name="chipBackgroundColor">#FFa9B4</item>
    <item name="closeIconTint">#FF3355</item>
  </style>

  <style name="ShapeAppearance.Example.PILL" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">50%</item>
  </style>

  <style name="ShapeAppearance.Example.Diamond" parent="">
    <item name="cornerFamily">cut</item>
    <item name="cornerSize">50%</item>
  </style>

  <style name="ShapeAppearance.Example.TopLeftCircle" parent="">
    <item name="cornerFamilyTopLeft">rounded</item>
    <item name="cornerSizeTopLeft">100%</item>
  </style>

  <style name="ShapeAppearance.Example.TopRightCircle" parent="">
    <item name="cornerFamilyTopRight">rounded</item>
    <item name="cornerSizeTopRight">100%</item>
  </style>

  <style name="ShapeAppearance.Example.BottomLeftCircle" parent="">
    <item name="cornerFamilyBottomLeft">rounded</item>
    <item name="cornerSizeBottomLeft">100%</item>
  </style>

  <style name="ShapeAppearance.Example.BottomRightCircle" parent="">
    <item name="cornerFamilyBottomRight">rounded</item>
    <item name="cornerSizeBottomRight">100%</item>
  </style>
</resources>
